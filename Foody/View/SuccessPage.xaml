<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Foody.ViewModel"
             x:Class="Foody.SuccessPage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout BackgroundColor="{StaticResource BG_Color}"  Padding="10">
                    <Label Text="Check Out" 
                       TextColor="White"  
                       HorizontalOptions="Center" 
                       FontSize="Title" 
                       FontAttributes="Bold" />
                </StackLayout>
                <StackLayout Padding="10">
                    <Label Text="Success!" FontAttributes="Bold" FontSize="Large" Margin="0,20,0,0"/>
                    

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <!--<Button Text="Reset" x:Name="bt_Reset" Clicked="Resetbtn"/>-->
                        <Button Text="Home" x:Name="bt_CheckOut" Clicked="GoBackHome"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>
