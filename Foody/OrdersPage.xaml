<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Foody.OrdersPage">
    <ContentPage.Content>
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
                <RowDefinition Height="45" />
            </Grid.RowDefinitions>
            <Label Text="IMAGE" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand"/>
            <Label Text="ORDERS" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand"/>

            <Label Text="2 Sept 2019" Grid.Row="2" Grid.Column="0" />
            <Label Text="$395 >" Grid.Row="2" Grid.Column="1" HorizontalTextAlignment="End"/>

            <Label Text="15 Sept 2019" Grid.Row="3" Grid.Column="0" />
            <Label Text="$280 >" Grid.Row="3" Grid.Column="1" HorizontalTextAlignment="End"/>

            <Label Text="21 Sept 2019" Grid.Row="4" Grid.Column="0" />
            <Label Text="$469 >" Grid.Row="4" Grid.Column="1" HorizontalTextAlignment="End"/>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>
